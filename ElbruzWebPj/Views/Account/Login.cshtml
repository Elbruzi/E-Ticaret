@model User

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/DefaultLayout.cshtml";
	ViewBag.HideFooter = true;
}




<!DOCTYPE html>
<html lang="tr">
<head>

	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>LUXE | Giriş Yap</title>
	<style>
		/* === GENEL STİLLER === */



		/* === LOGIN FORM === */
		.login-container {
			max-width: 450px;
			width: 100%;
			margin: 20px auto; /* Margin ekleyerek formu daha iyi hizalayalım */
			padding: 60px 40px;
			background-color: #111;
			border: 1px solid #333;
			border-radius: 5px;
		}

		.login-title {
			text-align: center;
			margin-bottom: 40px;
			color: #FFD700;
			font-weight: 300;
			font-size: 28px;
			letter-spacing: 1px;
		}

		.form-group {
			margin-bottom: 25px;
		}

			.form-group label {
				display: block;
				margin-bottom: 8px;
				color: #ccc;
				font-size: 14px;
			}

		.form-control {
			width: 93%;
			padding: 12px 15px;
			background-color: #222;
			border: 1px solid #333;
			color: #fff;
			font-size: 14px;
			transition: border-color 0.3s;
		}

			.form-control:focus {
				outline: none;
				border-color: #FFD700;
			}

		.btn-login {
			width: 100%;
			padding: 14px;
			background-color: #FFD700;
			color: #000;
			border: none;
			font-weight: 600;
			letter-spacing: 1px;
			cursor: pointer;
			transition: background-color 0.3s;
			margin-top: 10px;
		}

			.btn-login:hover {
				background-color: #e6c700;
			}

		.login-footer {
			text-align: center;
			margin-top: 30px;
			color: white;
			font-size: 14px;
		}

			.login-footer a {
				color: green;
				text-decoration: none;
				transition: color 0.3s;
			}

				.login-footer a:hover {
					color: #e6c700;
				}

		/* === FOOTER === */
		footer {
			background-color: #000;
			padding: 20px;
			color: #fff;
			text-align: center;
			width: 100%;
			margin-top: auto; /* Footer'ı sayfanın alt kısmına itiyoruz */
		}

			footer p {
				font-size: 14px;
				color: #ccc;
			}
	</style>
	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>


	<!-- LOGIN FORM -->
	<div class="login-container ">

		<h2 class="login-title">GİRİŞ YAP</h2>
		<form asp-action="login" asp-controller="Account" method="POST">
			<div class="form-group">
				<label for="email">E-posta Adresi</label>
				<input type="email" asp-for="Email" name="Email" class="form-control" required>
			</div>
			<div class="form-group">
				<label for="password">Şifre</label>
				<input type="password" placeholder="Şifre" asp-for="Password" class="form-control" maxlength="100"   >
			</div>
			
			<button type="submit" class="btn-login">GİRİŞ YAP</button>
		</form>
		<div class="login-footer">
			<p>Hesabınız yok mu?  <br /> <a asp-controller="Account" asp-action="Register" >Kayıt Olun</a></p>
		</div>
	</div>
</body>
</html>





