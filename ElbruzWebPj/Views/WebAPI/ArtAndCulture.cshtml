@model IEnumerable<Events>

@{
    ViewData["Title"] = "ArtAndCulture";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<div class="container Divs">
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Tur)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Adi)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.EtkinlikBaslamaTarihi)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.EtkinlikBitisTarihi)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.EtkinlikMerkezi)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.KisaAciklama)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.BiletSatisLinki)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.KucukAfis)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Tur</td>
                        <td>@item.Adi</td>
                        <td>@item.EtkinlikBaslamaTarihi.ToShortDateString()</td>
                        <td>@item.EtkinlikBitisTarihi.ToShortDateString()</td>
                        <td>@item.EtkinlikMerkezi</td>
                        <td>@Html.Raw(item.KisaAciklama?.Replace("<br>", ""))</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.BiletSatisLinki))
                            {
                                <a href="@item.BiletSatisLinki" target="_blank" class="btn btn-success">ETKİNLİK LİNKİ</a>
                            }
                        </td>
                        <td style="height:50px; width:250px;">
                            <img src="@item.KucukAfis" style="max-width: 100%; height: auto;" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .Divs {
        margin-bottom: 2rem;
        background-color: #3B1C32;
        border-radius: 25px;
        padding: 20px;
        /* opsiyonel: gölge efekti */
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    /* Table stilini biraz güzelleştirelim */
    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 15px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
    }

    thead {
        background-color: #6A1E55;
        color: #fff;
    }

    tbody tr:nth-child(even) {
        background-color: #A64D79;
    }
</style>
