<!DOCTYPE html>
<html lang="tr">
<head>

    <link href="~/css/defaultstylesheet.css" rel="stylesheet" />

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LUXE</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

    @await Component.InvokeAsync("Headers")

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    @{
        var hideFooter = ViewBag.HideFooter ?? false;
    }
    @if (!hideFooter)
    {
        <!-- FOOTER -->
        <footer>
            <div class="container">
                <div class="footer-container">
                    <div class="footer-col">
                        <h3>LUXE KICKS</h3>
                        <p style="color: #999; margin-top: 15px; font-size: 14px;">Lüks ayakkabı dünyasının kapılarını aralayın. Kalite ve şıklık sizinle.</p>
                        <div class="social-links">
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-pinterest"></i></a>
                        </div>
                    </div>
                    <div class="footer-col">
                        <h3>Hızlı Linkler</h3>
                        <ul>
                            <li><a href="#">Yeni Gelenler</a></li>
                            <li><a href="#">En Çok Satanlar</a></li>
                            <li><a href="#">Kampanyalar</a></li>
                            <li><a href="#">Mağazalarımız</a></li>
                        </ul>
                    </div>
                    <div class="footer-col">
                        <h3>Yardım</h3>
                        <ul>
                            <li><a href="#">Sipariş Takibi</a></li>
                            <li><a href="#">İade Politikası</a></li>
                            <li><a href="#">Ödeme Seçenekleri</a></li>
                            <li><a href="#">Bize Ulaşın</a></li>
                        </ul>
                    </div>
                    <div class="footer-col">
                        <h3>Bülten</h3>
                        <p style="color: #999; font-size: 14px; margin-bottom: 15px;">Yeni ürünler ve özel indirimler için abone olun.</p>
                        <input type="email" placeholder="E-posta Adresiniz" style="background: #111; border: 1px solid #333; padding: 10px; width: 100%; color: #fff; margin-bottom: 10px;">
                        <a href="#" class="btn" style="display: block; text-align: center; padding: 10px; font-size: 12px;">ABONE OL</a>
                    </div>
                </div>
                <div class="copyright">
                    <p>&copy; 2023 LUXE KICKS. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </footer>
    }


  

</body>
</html>


